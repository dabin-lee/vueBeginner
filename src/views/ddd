<template>
  <div class="hello container">
    <h2 v-if="errMessage">{{ errMessage }}</h2>
    <ul class="list-group list-group-numbered">
      <li
        v-for="product in products"
        :key="product.id"
        class="list-group-item d-flex justify-content-between"
      >
        <div>
          <p>{{ product.title }}</p>
          <div class="fw-light">{{ product.description }}</div>
        </div>
        <div>
          <button
            type="button"
            class="btn btn-primary"
            @click="deleteItem(product)"
          >
            delete
          </button>
        </div>
      </li>
    </ul>
  </div>
</template>

<script>
import axios from "axios";
export default {
  name: "HelloWorld",
  props: {
    msg: String,
  },
  data() {
    return {
      products: [],
      errMessage: "",
      itemNum: "",
      closeItem: true,
    };
  },
  methods: {
    async fetchData() {
      try {
        const dummy = await axios.get(
          "https://dummyjson.com/products?limit=10"
        );
        this.products = dummy.data.products;
      } catch (err) {
        this.errMessage = err.message;
      }
    },
    async deleteItem(product) {
      const id = product.id;
      // this.closeItem = !this.closeItem;
      try {
        await axios.delete("https://dummyjson.com/products?limit=10", id, {});
      } catch (err) {
        this.errMessage = err.message;
      }
    },
  },
  mounted() {
    this.fetchData();
  },
};
</script>

<!-- Add "scoped" attribute to limit CSS to this component only -->
<style scoped>
.container {
  max-width: 576px;
}
.deleteItem {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 888;
}
</style>
